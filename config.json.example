{
  "environment": "dev",
  "api": {
    "base_url": "https://vm-wcl-dst-web.kisters.de/KiWebPortalP3",
    "organization_id": null,
    "timeout": 30,
    "max_retries": 3,
    "verify_ssl": true,
  },
  "authentication": {
    "username": "your_username_here",
    "email": null,
    "password": "your_password_here"
  },
  "processing": {
    "timezone": "UTC",
    "run_hour": 1,
    "lookback_days": 1
  },
  "tags": {
    "lake_evaporation": "lakeEvaporation"
  },
  "constants": {
    "albedo": 0.23,
    "angstrom_prescott": {
      "a": 0.25,
      "b": 0.5
    }
  },
  "units": {
    "temperature": "celsius",
    "humidity": "percent",
    "wind_speed": "km/h",
    "pressure": "kPa",
    "sunshine": "hours",
    "evaporation": "mm"
  },
  "data_requirements": {
    "required_fields": [
      "temperature",
      "humidity",
      "wind_speed",
      "air_pressure"
    ],
    "optional_fields": [
      "sunshine_hours",
      "global_radiation"
    ]
  },
  "raster": {
    "datasource_id": 1,
    "enabled": true,
    "use_as_fallback": true,
    "models": {
      "europe": "icon_eu",
      "global": "gfs"
    },
    "parameters": {
      "temperature": "TMP_2M",
      "pressure": "PRMSL",
      "humidity": "RH_2M",
      "wind_speed": "FF_10M",
      "cloud": "TCDC",
      "low_clouds": "LCDC",
      "medium_clouds": "MCDC",
      "high_clouds": "HCDC"
    },
    "_comments": {
      "datasource_id": "Raster datasource ID for fetching weather data",
      "use_as_fallback": "Use raster data when timeseries metadata is missing or invalid",
      "models": "Model selection based on location: icon_eu for Europe, gfs for global (also fallback for Europe)",
      "parameters": "Cloud cover parameters: low_clouds (below 2km), medium_clouds (2-6km), high_clouds (above 6km). Units are automatically converted to octas if provided in %."
    }
  }
}
